# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/travel-app
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/travel-app

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-make-it-long-and-random
JWT_EXPIRES_IN=7d

# External API Keys (Get from respective providers)
OPENWEATHER_API_KEY=your-openweather-api-key-from-openweathermap-org
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-from-console-cloud-google
AMADEUS_CLIENT_ID=your-amadeus-client-id-for-flight-booking
AMADEUS_CLIENT_SECRET=your-amadeus-client-secret
OPENAI_API_KEY=your-openai-api-key-for-ai-features

# Email Configuration (For notifications and password reset)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-gmail-app-password

# CORS Configuration
CLIENT_URL=http://localhost:3000

# Payment Configuration (For booking features)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf